@model IEnumerable<Product>

@{
    ViewData["Title"] = "ElectroGuitars";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">
<style>
    .center {
  display: block;
  margin-left: auto;
  margin-right: auto; 
    }
    .img_text1{
        text-align:center;
        color:#996633;
        font-family:Rockwell;
    }
    .img_text2{
        text-align:center;
        color:black;
        font-family:Rockwell;
    }
 </style>



<div class="container" style="margin:100px">
    <div class="row justify-content-md-center">
    @foreach(var item in Model)
    {
        if (item.CategoryID==3)
        {
            <div class="col-sm-3" style="margin-top:30px">
                <div class="card">
                    <div class="card-body">
                    <div class="img-fluid">
                        <img src="~/images/@item.PictureURl" width="100px" height="auto" class="center">
                    </div>
                    </div>
                    <div class="card-footer">
                    <h3 class="img_text1">
                         @item.Brand @item.ProductID @item.Shape
                     <br>
                        @item.Color
                    </h3>

                     <h5 class="img_text2">
                         $ @item.Price
                     </h5>

                    <div class="row">
                        <div class="col-sm-3"> </div>
                        <div class="col-sm-3">
                            <div class="center">
                                <button type="button" class="btn btn-danger btn-sm-1" title="Move to the wish list">
                                 <i class="fa fa-heart" style="color:white"></i>
                                </button>
                            </div>
                        </div>
                                
                        <div class="col-sm-3">
                            <div class="center">
                                 <button type="button" class="btn btn-primary btn-block btn-sm-1">
                                      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-basket" viewBox="0 0 16 16">
                                        <path d="M5.757 1.071a.5.5 0 0 1 .172.686L3.383 6h9.234L10.07 1.757a.5.5 0 1 1 .858-.514L13.783 6H15a1 1 0 0 1 1 1v1a1 1 0 0 1-1 1v4.5a2.5 2.5 0 0 1-2.5 2.5h-9A2.5 2.5 0 0 1 1 13.5V9a1 1 0 0 1-1-1V7a1 1 0 0 1 1-1h1.217L5.07 1.243a.5.5 0 0 1 .686-.172zM2 9v4.5A1.5 1.5 0 0 0 3.5 15h9a1.5 1.5 0 0 0 1.5-1.5V9H2zM1 7v1h14V7H1zm3 3a.5.5 0 0 1 .5.5v3a.5.5 0 0 1-1 0v-3A.5.5 0 0 1 4 10zm2 0a.5.5 0 0 1 .5.5v3a.5.5 0 0 1-1 0v-3A.5.5 0 0 1 6 10zm2 0a.5.5 0 0 1 .5.5v3a.5.5 0 0 1-1 0v-3A.5.5 0 0 1 8 10zm2 0a.5.5 0 0 1 .5.5v3a.5.5 0 0 1-1 0v-3a.5.5 0 0 1 .5-.5zm2 0a.5.5 0 0 1 .5.5v3a.5.5 0 0 1-1 0v-3a.5.5 0 0 1 .5-.5z"/>
                                        </svg>
                                 </button>
                            </div>
                        </div>
                    </div>
                    </div>
                 </div>
             </div>
        }
    }
    </div>
</div>