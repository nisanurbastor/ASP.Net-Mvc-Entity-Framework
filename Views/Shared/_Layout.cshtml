
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="~/css/MyMainLayout.css" rel="stylesheet" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    
</head>
<style>
    a {
    flex: 1;
    text-decoration: none;
    outline: none;
    text-align: center;
    line-height: 3;
    color: black;
}
</style>

<body style="background-color:#333">
    <nav class="navbar navbar-expand-lg custom-nav-bar navbar-dark bg-dark" >
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <img src="~/images/logoson.png" alt="Logo" width="30" height="24" class="d-inline-block align-text-top">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <ul class="navbar-nav">
                    <li class="nav-link">
                        <a asp-controller="Product" asp-action="ElectroGuitars">
                            <p style="color:white">ELECTRIC GUITARS</p>
                        </a>
                    </li>
                    <li class="nav-link">
                        <a asp-controller="Product" asp-action="BassGuitars">
                            <p style="color:white">BASS GUITARS</p>
                        </a>
                    </li>
                    <li class="nav-link">
                        <a asp-controller="Product" asp-action="ClassicallGuitars">
                            <p style="color:white">CLASSIC GUITARS</p>
                        </a>
                    </li>
                    <li>
                        <div style="margin-left:810px">
                            <a asp-controller="Login" asp-action="Index">
                              <p style="color:white">LogIn</p>
                            </a>
                       </div>
                    </li>
                    <li>
                        <div style="margin-left:30px">
                            <a asp-action="#">
                            <p style="color:white">Basket</p>
                            </a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
   
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
   

    <footer class="footer">
        <div class="logolar">
            <img id="logo1" src="~/images/logo1.png" alt="">
            <img id="logo2" src="~/images/fender.png" alt="">
            <img id="logo3" src="~/images/epiphone.png" alt="">
            <img id="logo4" src="~/images/ibanez.png" alt="">
            <img id="logo5" src="~/images/jackson.png" alt="">
            <img id="logo6" src="~/images/prs.png" alt="">
            <img id="logo7" src="~/images/yamaha.png" alt="">
            <img id="logo8" src="~/images/shecter.png" alt="">
        </div>
        <hr style="color:white">
        <div class="footer-bottom">
            <p class="foot">Copyright 2022 HN Guitars Brands, Inc. All rights reserved.</p>
        </div>

    </footer>
</body>
</html>